<div class="row">
  <div class="col">

    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Fetch Original Image</h5>
        <h6 class="card-subtitle mb-3">Load a new, original image from source, or choose from previously processed images.</h6>

        <div class="row">

          <div class="col-lg-6 mb-3 mb-lg-0">
            <form {{action "retrieveImage" _src on="submit"}}>
              <div class="form-group">
                <label for="model--domain">imgix Domain</label>
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text">https://</span>
                  </div>
                  {{input id="model--domain" type="text" class="form-control" required=true value=model.domain}}
                </div>
              </div>

              <div class="form-group">
                <label for="model--path">Image Path</label>
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text">/</span>
                  </div>
                  {{input id="model--path" type="text" class="form-control" required=true value=model.path}}
                </div>
              </div>
              <button type="submit" class="btn btn-primary">Fetch</button>
            </form>
          </div>

          <div class="col-lg-6">
            <h6>Previously Processed</h6>
            {{#each model.processed as |url|}}
              {{previously-processed url=url class="mb-2" on-fetch=(action "retrieveImage" url)}}
            {{else}}
              <p class="card-text">No previously process images were found.</p>
            {{/each}}
            {{#if model.processed.length}}
              <button type="button" class="btn btn-warning" {{action "clearPrevious"}} title="Clear previosuly processed images.">Clear</button>
            {{/if}}
          </div>

        </div>

      </div>
    </div>

  </div>
</div>
