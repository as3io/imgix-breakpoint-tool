{{#each props.ratios as |ratio|}}
  <div class="row">
    <div class="col-12">
      <h2>{{ratio.label}}</h2>
    </div>
  </div>
  <div class="row mb-3">
    {{#each ratio.crops as |crop|}}
      <div class="col-sm-6 col-lg-3">

        <img src="{{crop.src}}" class="img-fluid img-thumbnail">
        <span class="figure-caption">{{crop.label}} ({{ratio.label}})</span>

      </div>
    {{/each}}
  </div>
  <hr>
{{/each}}



